<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/actName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Activity Name"
        android:layout_alignRight="@+id/attandanceCheck"
        android:layout_alignEnd="@+id/attandanceCheck" />

    <DatePicker
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_below="@+id/dest"
        android:layout_alignLeft="@+id/eventTime"
        android:layout_alignStart="@+id/eventTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actName"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Destination"
        android:layout_alignRight="@+id/actName"
        android:layout_alignEnd="@+id/actName" />

    <TimePicker
        android:id="@+id/eventTime"
        android:layout_height="169dp"
        android:timePickerMode="spinner"
        android:layout_below="@+id/eventDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="240dp" />

    <Button
        android:id="@+id/attandanceCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="attandance check"
        android:layout_below="@+id/eventTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/eventTime"
        android:layout_toStartOf="@+id/eventTime" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:id="@+id/backArrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/preExamWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add exam warning "
        android:layout_below="@+id/eventTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerActType"
        android:inputType="textNoSuggestions"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_below="@+id/dest"
        android:layout_toLeftOf="@+id/eventDate"
        android:layout_toStartOf="@+id/eventDate" />

    <Button
        android:id="@+id/sendEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send notification "
        android:layout_marginTop="43dp"
        android:layout_below="@+id/eventDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/eventTime" />

    <Button
        android:id="@+id/addActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Activity"
        android:layout_below="@+id/sendEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/eventTime"
        android:layout_toStartOf="@+id/eventTime" />

    <Button
        android:id="@+id/strtAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remind me "
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/eventDate"
        android:layout_toStartOf="@+id/eventDate" />


</RelativeLayout>